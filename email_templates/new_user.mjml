<mjml>
  <mj-head>
    <mj-attributes>
      <mj-text font-family="Inter, Arial, sans-serif" font-size="16px" color="#1B1B1B" line-height="1.5" />
      <mj-button font-family="Inter, Arial, sans-serif" font-size="16px" font-weight="600" border-radius="6px" />
    </mj-attributes>

    <mj-style inline="inline">
      :root{
      --agari-bg:#F7FAFC;
      --agari-surface:#FFFFFF;
      --logo-green-dark:#204727;
      --agari-primary-ink:#FFFFFF;
      --agari-muted:#6B7280;
      --agari-border:#E5E7EB;
      --agari-link:#204727;
      }

      .agari-btn {
      display: flex;
      min-width: 80px;
      padding: var(--padding-p-2, 8px) var(--padding-p-3, 12px);
      justify-content: center;
      align-items: center;
      gap: 4px;
      border-radius: 6px; /* rounded-md equivalent */
      background: var(--logo-green-dark, #204727);
      color: var(--agari-primary-ink);
      text-decoration: none;
      font-weight: 600;
      transition: all 0.2s ease-in-out;
      }

      .agari-btn:hover {
      background-color: #18381F;
      }
    </mj-style>

    <mj-preview>You're invited to AGARI — accept your invitation.</mj-preview>
  </mj-head>

  <mj-body background-color="#F7FAFC">
    <!-- Subject -->
    <mj-section padding="16px 0 16px 0">
      <mj-column>
        <mj-text font-size="12px" color="#6B7280" align="center">
          Subject: You've been invited to AGARI
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Card -->
    <mj-section padding="16px 8px">


      <!-- Header -->
      <mj-column>
        <mj-text align="left" font-size="20px" font-weight="700" color="#204727">
          AGARI LOGO
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Title -->
    <mj-section padding="0 0 16px 0">
      <mj-column>
        <mj-text font-size="22px" font-weight="700" color="#1B1B1B">
          You've been invited to AGARI
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Message -->
    <mj-section padding="0 0 16px 0">
      <mj-column>
        <mj-text>
          You're invited to join <strong>{{ org_name }}</strong> on AGARI.<br />
          Click the button below to create your account.
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Custom Flex Button -->
    <mj-section padding="0 0 16px 0">
      <mj-column>
        <mj-text align="center">
          <a href="{{ accept_link }}" class="agari-btn">
            Accept Invitation
          </a>
        </mj-text>
      </mj-column>
    </mj-section>

    <!-- Disclaimer -->
    <mj-section padding="0px 0px 24px 0px">
      <mj-column>
        <mj-text color="#6B7280" font-size="14px">
          If you didn't expect this invitation, you can safely ignore this email.
        </mj-text>
      </mj-column>
    </mj-section>
    </mj-column>
    </mj-section>

    <!-- Footer -->
    <mj-section padding="0 0 16px 0">
      <mj-column>
        <mj-text align="left" color="#6B7280" font-size="12px">
          © {{YEAR}} AGARI • African CDC / ASLM
          Need help? <a href="mailto:support@agari.example" style="color:var(--agari-link);">support@agari.example</a>
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>